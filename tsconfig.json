{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", 
    "paths": { 
      "@/*": [
        "./*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/components/*": [
        "components/*"
      ]
    }
    ,"typeRoots": [
      "./node_modules/@types",
      "./types"   
    ]
  },
  "include": [
    // "./dist/types/**/*.ts",
    "./next-env.d.ts",
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "pages/**/*", 
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}